<?xml version="1.0" encoding="UTF-8"?>
<library>
    <extension id="cordova.core">
        <entryClass>org.apache.cordova.core.CordovaCore</entryClass>
    </extension>
    <platforms>
        <platform value="JAVA">
            <target version="default" config="JAVA_XHR" />
        </platform>
    </platforms>
    <configurations>
        <configuration name="JAVA_XHR" version="1.0" comment="For XHR architecture for Java implementation">
            <src type="text/java" path="org" comment="API implementation in JavaScript" />
            <src type="text/javascript" path="js/common/cordova.js" comment="JS interface" />
            <src type="text/javascript" path="js/blackberry/exec.js" comment="JS interface" />
            <src type="text/javascript" path="js/blackberry/manager.js" comment="JS interface" />
            <src type="text/javascript" path="js/blackberry/platform.js" comment="JS interface" />
            <src type="text/javascript" path="js/webworks/manager.js" comment="JS interface" />
        </configuration>
    </configurations>
    <features>
        <feature id="cordova.core" version="1.0.0">Cordova Core JavaScript Extension</feature>
    </features>
</library>
